{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Manufacturer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Street</th>
                <th>Number</th>
                <th>Postcode</th>
                <th>City</th>
                <th>Telnumber</th>
                <th>Email</th>
                <th>Imagename</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manufacturer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.postCode }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.telNumber }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.imageName }}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('manufacturer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('manufacturer_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('manufacturer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
